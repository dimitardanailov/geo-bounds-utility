{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["mocha"]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src", "test"],
  "exclude": ["dist", "node_modules"]
}
